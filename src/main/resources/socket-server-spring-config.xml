<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/data/mongo
    http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd">

    <mongo:mongo id="mongo" port="27017" host="localhost"/>

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg ref="mongo" />
        <constructor-arg value="test" />
    </bean>
    <bean id="digitRecordRepository" class="com.chinatelecom.lottery.repository.DigitRecordRepository">
        <property name="mongoOperations" ref="mongoTemplate"/>
    </bean>
    <bean id="waveRecordRepository" class="com.chinatelecom.lottery.repository.WaveRecordRepository">
        <property name="mongoOperations" ref="mongoTemplate"/>
    </bean>

    <bean id="userRepository" class="com.chinatelecom.lottery.repository.UserRepository">
        <property name="mongoOperations" ref="mongoTemplate"/>
    </bean>

    <bean id="packetRepository" class="com.chinatelecom.lottery.repository.PacketRepository">
        <property name="digitRecordRepository" ref="digitRecordRepository"/>
        <property name="waveRecordRepository" ref="waveRecordRepository"/>
        <property name="userRepository" ref="userRepository"/>
        <property name="lastWaveRecordRepository" ref="lastWaveRecordRepository"/>
    </bean>

    <bean id="lastWaveRecordRepository" class="com.chinatelecom.lottery.repository.LastWaveRecordRepository">
        <property name="mongoOperations" ref="mongoTemplate"/>
    </bean>

    <bean id="packetService" class="com.chinatelecom.lottery.service.TicketService">
        <property name="packetRepository" ref="packetRepository"/>
    </bean>
</beans>